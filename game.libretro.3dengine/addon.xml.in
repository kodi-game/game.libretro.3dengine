<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.3dengine"
		name="Test Core - 3D Engine"
		version="1.0.0.29"
		provider-name="Team Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>mtl|obj</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>true</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.3dengine</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="da_DK">Testkerne - 3D motor</summary>
		<summary lang="en_GB">Test Core - 3D Engine</summary>
