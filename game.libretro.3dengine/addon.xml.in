<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.3dengine"
		name="Test Core - 3D Engine"
		version="1.0.0.12"
		provider-name="Team Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>mtl|obj</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>true</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.3dengine</source>
		<summary lang="en_GB">Test Core - 3D Engine v1</summary>
		<description lang="da_DK">En teknisk demo til libretro GL med yderligere funktioner (kamera/placering/osv.).</description>
		<description lang="en_GB">A tech demo for libretro GL with additional features (camera/location/etc).</description>
		<description lang="zh_CN">包含附加功能（摄像头/位置等）的 libretro GL 的技术演示。</description>
	</extension>
</addon>
