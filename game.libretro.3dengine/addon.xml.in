<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.3dengine"
		name="Test Core - 3D Engine"
		version="1.0.0.6"
		provider-name="Team Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>png|jpg|mtl|obj</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.3dengine</source>
		<summary lang="en_GB">Test Core - 3D Engine v1</summary>
		<description lang="en_GB">A tech demo for libretro GL with additional features (camera/location/etc).[CR][CR]Supported files: .png, .jpg, .mtl, .obj</description>
	</extension>
</addon>
